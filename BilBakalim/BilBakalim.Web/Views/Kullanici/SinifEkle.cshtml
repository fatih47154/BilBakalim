
@{
    ViewBag.Title = "SinifEkle";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@model  BilBakalim.Data.Sinif

<link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/css/gallery.css" />


<div class="row">

    <div class="col-lg-12">
        <k class="panel">
            @if (ViewData["Hata"] != null)
            {
                <div class="alert alert-warning">
                    <p>@ViewData["Hata"]</p>
                </div>
            }
            <header class="panel-heading"></header>
            
            <div class="panel-body">
                @using (Html.BeginForm("SinifEkle", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-6">

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Oda Adı </label>&nbsp;<span style="color: red;">*</span>
                                    <input type="text" class="form-control" placeholder="Oda adı giriniz" name="Ad" required>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.LisanID)
                                    @Html.DropDownList("LisanID", (SelectList)ViewBag.Dil, "Dil Seçiniz", new { @class = "form-control m-bot15" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(x => x.SinifKategoriID)
                                    @Html.DropDownList("SinifKategoriID", (SelectList)ViewBag.SinifKat, "Dil Seçiniz", new { @class = "form-control m-bot15" })
                                </div>
                                <div class="form-group">
                                    <label>Resim</label>
                                    <input type="file" name="resimGelen" class="form-control" placeholder="Resim giriniz.">
                                </div>

                                
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Açıklama</label>
                                    <textarea style="height:220px" class="form-control" name="Aciklama" required placeholder="Açıklama Giriniz." rows="3"></textarea>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox">

                                        <input type="checkbox" name="gor" value="true" class="custom-control-input" id="defaultChecked2" checked="">
                                        <label class="custom-control-label" for="defaultChecked2">Görünürlük</label>
                                    </div>
                                </div>
                                <button type="submit" id="button" class="btn btn-info">İlerle</button>
                                <a href="/Home/Index" class="btn btn-danger">İptal</a>
                                <button type="reset" class="btn btn-">Temizle</button>

                            </div>


                        
                        </div>

                   



                }
            </div>
                }
    </div>
</div>

<link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="/Content/Admin/css/style.css" rel="stylesheet">

<script src="/Content/Admin/js/jquery.js"></script>
<script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>

<script src="/Content/Admin/js/common-scripts.js"></script>