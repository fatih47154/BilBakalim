
@{
    ViewBag.Title = "KullaniciEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-lg-12">
        @if (TempData["GenelMesaj"] != null)
        {
            <div class="alert alert-success">
                <p>@TempData["GenelMesaj"]</p>
            </div>
        }

        @if (TempData["hata"] != null)
        {
            <div class="alert alert-danger">
                <p>@TempData["hata"]</p>
            </div>
        }
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="col-lg-12">
                      Kullanıvı Kayıt
                    </div>
                </header>
                <div class="panel-body">
                    <form role="form" method="post" action="/Admin/KullaniciEkle">

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-12">


                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanici Adı </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adı Giriniz..." name="Adi" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanici Soyadi </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Kullanıcı Soyadı Giriniz..." name="Soyadi" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanici E-mail </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Kullanıcı E-mail Giriniz..." name="Email" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanıcı Adı </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adı Giriniz..." name="KullaniciAdi" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanici Şifre </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Şifre Giriniz..." name="Sifre" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Rol Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                                        @Html.DropDownList("RolID", (SelectList)ViewBag.rol, "Seçiniz...", new { @class = "form-control", required = "required" })
                                    </div>
                                  

                                    <div class="form-group">
                                        <label>Resim</label>
                                        <input type="file" class="form-control" name="resimGelen" ">
                                    </div>

                                    <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                    <a href="/Admin/KullaniciListesi" class="btn btn-danger">İptal</a>
                                    <button type="reset" class="btn btn-default">Temizle</button>
                                </div>

                            </div>
                        </div>

                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

