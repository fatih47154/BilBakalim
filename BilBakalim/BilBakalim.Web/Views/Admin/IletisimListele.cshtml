
@{
    ViewBag.Title = "IletisimListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data

@model List<Iletisim>



@section head{
    <link rel="stylesheet" href="/Content/assets/data-tables/DT_bootstrap.css" />
    <style type="text/css">
        tbody, thead {
            width: 19.2%;
        }

        tbody, thead {
            font-size: 12px;
        }

        #back {
            background-color: #EECBC4;
        }
    </style>


}
<div class="row">
    <div class="col-lg-12">
        @if (TempData["GenelMesaj"] != null)
        {
            <div class="alert alert-success">
                <p>@TempData["GenelMesaj"]</p>
            </div>
        }
        @if (TempData["hata"] != null)
        {
            <div class="alert alert-danger">
                <p>@TempData["GenelMesaj"]</p>
            </div>
        }

        <section class="panel">

            <div class="panel-body">
                <div class="col-lg-12">
                    <div class="adv-table editable-table">
                        <table class="table table-striped table-hover table-bordered" id="editable-sample">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>E-Mail</th>
                                    <th>Telefon</th>
                                    <th>İçerik</th>                                  
                                    <th style="text-align:center;"> İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="@item.ID">
                                        <td>
                                            @item.Isim
                                        </td>
                                        <td>
                                            @item.Eposta
                                        </td>
                                        <td>
                                            @item.Telefon
                                        </td>
                                        <td>
                                            @{
                                                if (item.Icerik.Length > 10)
                                                {
                                                    @item.Icerik.Substring(0, 10)
                                                }
                                                else
                                                {
                                                    @item.Icerik
                                                }
                                            }


                                        </td>

                                        <td>
                                            <a href="/Admin/IletisimSil/@item.ID" title="Sil" style="float:right;margin-right:2%" class="btn btn-danger btn-xs btn-danger"><i class="icon-trash"></i> Sil</a>
                                            <a href="/Admin/IletisimDetay/@item.ID" title="Sil" style="float:right;margin-right:2%" class="btn btn-info btn-xs btn-info"><i class="icon-trash"></i> Ayrıntı</a>
                                            <a href="/Admin/IletisimYanıtla/@item.ID" title="Sil" style="float:right;margin-right:2%" class="btn btn-success btn-xs btn-confirm"><i class="icon-trash"></i> Yanıtla</a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
