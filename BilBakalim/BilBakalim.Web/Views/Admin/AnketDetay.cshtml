
@{
    ViewBag.Title = "AnketDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data
@model Anket
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading" style="padding-bottom: 10px;">
                <div class="col-lg-12" style="margin-bottom:10px;">
                    <b>Sınıf Detay</b>
                    <a href="/Admin/AnketListele" class="btn btn-success" style="float: right"><i class="icon-mail-reply (alias)"></i> Listeye Geri Dön</a>
                </div>
            </header>
            
            <div class="panel-body">
                <div class="col-lg-12">
                    <section class="panel">
                        <header class="panel-heading tab-bg-dark-navy-blue ">
                            <ul class="nav nav-tabs">
                                <li class="active">
                                    <a data-toggle="tab" href="#home">Anket Bilgileri</a>
                                </li>                              
                            </ul>
                        </header>
                        <div class="panel-body">
                            <div class="tab-content">
                                <div id="home" class="tab-pane active">
                                    <b>Anket Adı : </b> <p>@Model.Ad</p> <br />

                                    <b>Açıklama : </b> <p>@Model.Aciklama </p> <br />

                                    <b>Anketi Oluşturan Kullanıcı : </b> <p>@Model.Kullanici.Adi @Model.Kullanici.Soyadi </p> <br />

                                    <b>Görünürlük : </b>
                                    @{
                                        if (Model.Gorunurluk == true)
                                        {
                                            <p> Açık</p>
                                        }
                                        else
                                        { <p> Kapalı</p>}
                                    }
                                    <br />

                                    <b> Oynanma Sayısı: </b> <p>@Model.GoruntulenmeSayisi</p>  <br />
                                    <b>Oluşturma Tarihi : </b> <p>@Model.OlusturmaTarihi.Value.ToString("dd-MM-yyyy") </p> <br />
                                    <b>Dil : </b> <p>@Model.Dİl.Adi </p> <br />
                                    <b>Anket Resmi </b> <br />
                                    
                                        <div class="entry-thumbnail"><img width="120" height="120" src="@Model.Resim.Url" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" srcset="@Model.Resim.Url 770w, @Model.Resim.Url 230w, @Model.Resim.Url 640w" sizes="(max-width: 120px) 100vw, 80px"></div>

                                    
                                </div>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </section>
    </div>
</div>