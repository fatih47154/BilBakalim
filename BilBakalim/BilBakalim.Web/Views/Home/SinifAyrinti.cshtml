
@{
    ViewBag.Title = "SinifAyrinti";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@using BilBakalim.Data
@model Sinif
@{ Kullanici c = (Kullanici)Session["Kullanici"]; }
<link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="/Content/Admin/css/gallery.css" />

<div class="row">
    <div class="col-lg-4">
        <div>
            <li class="grid cs-style-3">
                <figure>
                    <img style="height:400px" src="@Model.Resim.Url" alt="img04">
                    <figcaption>

                        <h3>@Model.Ad</h3>


                        @{
                            if (c != null)
                            {
                                if (Model.Kullanici.ID == c.ID)
                                {
                                    <a style="margin-right:9vw" class="fancybox" rel="group" href="/Kullanici/SoruEkle/@Model.ID"> Soru Ekle </a>
                                    <a style="margin-right:4vw" class="fancybox" rel="group" href="/Kullanici/SinifDuzenle/@Model.ID"> Düzenle </a>
                                    if (Enumerable.Count(ViewBag.soru) != 0)
                                    {
                                        <a class="fancybox" rel="group" href="http://localhost:3000/register/@Model.ID"> Oyna </a>
                                    }
                                    else
                                    {
                                        <a class="fancybox" rel="group" href="#" onclick="alert('Sınıfta Soru Bulunamadığı İçin Oyun Başlatılamamakta. Lütfent Daha Sonra Tekrar Deneyiniz.');"> Oyna </a>
                                    }

                                }
                                else
                                {
                                    if (Enumerable.Count(ViewBag.soru) != 0)
                                    {
                                        <a class="fancybox" rel="group" href="http://localhost:3000/register/@Model.ID"> Oyna </a>
                                    }
                                    else
                                    {
                                        <a class="fancybox" rel="group" href="#" onclick="alert('Sınıfta Soru Bulunamadığı İçin Oyun Başlatılamamakta. Lütfent Daha Sonra Tekrar Deneyiniz.');"> Oyna </a>
                                    }

                                }
                            }

                            else
                            {
                                <a class="fancybox" rel="group" href="#" onclick="alert('Lütfen giriş yapınız');"> Oyna </a>

                            }


                        }

                    </figcaption>
                </figure>
            </li>
        </div>

        <div style="margin-top:2%">
            <section class="panel">
                <header class="panel-heading">
                    Sınıf Özellikleri
                </header>

                <div class="panel-body profile-activity">
                    <h5 class="pull-right">@Model.OlusturmaTarihi.Value.ToString("dd-MM-yyy")</h5>
                    <div class="activity terques">
                        <span>
                            <i class="icon-user"></i>
                        </span>
                        <div class="activity-desk">
                            <div style="width:100%" class="panel">
                                <div class="panel-body">
                                    <div class="arrow"></div>
                                    <h4>Emre Kaymak</h4>
                                    <p>@Model.Aciklama</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body profile-activity">
                    <div class="activity green">
                        <span>
                            <i class=" icon-gamepad"></i>
                        </span>
                        <div class="activity-desk">
                            <div style="width:100%" class="panel">
                                <div class="panel-body">
                                    <div class="arrow"></div>
                                    <p> <i class="icon-eye-open"></i> Görüntülenme Sayısı : @Model.GoruntulenmeSayisi</p><br />
                                    <p><i class="icon-film"></i>Görünürlük : @Model.Gorunurluk</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </section>
        </div>


    </div>
    <div class="col-lg-8">
        <div id="accordion" class="panel-group m-bot20">
            @{
                int sayi = 0;
                foreach (Sorular item in ViewBag.soru)
                {
                    sayi++;
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a href="/Content/Admin/#@sayi" data-parent="#accordion" data-toggle="collapse" class="accordion-toggle">
                                    @sayi -) @item.Soru
                                </a>
                                @if (c != null)
                                {
                                    if (item.Sinif.KullaniciID == c.ID)
                                    {
                                        <a style="float:right;margin-right:5px;" data-id="@item.ID" class="btn btn-danger btn-xs btn-confirm"><i class="icon-trash"></i> <b>Sil</b></a>
                                        <a style="float:right;margin-right:5px;" href="/Home/SoruDuzenle/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i> <b>Düzenle</b></a>
                                    }

                                }

</div>
                        <div class="panel-collapse collapse" id="@sayi">
                            <div class="panel-body">
                                <!-- buraya yaz-->
                                <div class="col-md-8">
                                    <div class="best-seller">

                                        <article class="media">
                                            @if ("Cevap1" == item.DogruCevap)
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/a.jpg">
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/b.jpg">
                                                </a>
                                            }
                                            <div class="media-body">
                                                <a href="/Content/Admin/#" class=" p-head">Cevap 1</a>
                                                <p>@item.Cevap1 </p>

                                            </div>

                                        </article>
                                        <article class="media">
                                            @if ("Cevap2" == item.DogruCevap)
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/a.jpg">
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/b.jpg">
                                                </a>
                                            }
                                            <div class="media-body">
                                                <a href="/Content/Admin/#" class=" p-head">Cevap 2</a>
                                                <p>@item.Cevap2 </p>

                                            </div>

                                        </article>
                                        <article class="media">
                                            @if ("Cevap3" == item.DogruCevap)
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/a.jpg">
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/b.jpg">
                                                </a>
                                            }
                                            <div class="media-body">
                                                <a href="/Content/Admin/#" class=" p-head">Cevap 3</a>
                                                <p>@item.Cevap3 </p>

                                            </div>

                                        </article>
                                        <article class="media">
                                            @if ("Cevap4" == item.DogruCevap)
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/a.jpg">
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="pull-left thumb p-thumb">
                                                    <img style="width:50%;height:50%;margin-left:25%;margin-top:25%" src="/Content/images/b.jpg">
                                                </a>
                                            }
                                            <div class="media-body">
                                                <a href="/Content/Admin/#" class=" p-head">Cevap 4</a>
                                                <p>@item.Cevap4 </p>

                                            </div>

                                        </article>


                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <img src="@Model.Resim.Url" alt="img04">
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>

</div>
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" id="mi-modal">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Bu Soruyu Silmek İstediğinizden Emin misiniz ?</h4>
            </div>
            <div class="modal-footer">
                <a href="" class="btn btn-danger btnnn" id="modal-btn-si">Sil</a>
                <button type="button" class="btn btn-primary" id="modal-btn-no">Kapat</button>
            </div>
        </div>
    </div>
</div>
@section script{
    <script>
        var id;
        var modalConfirm = function (callback) {
            $(".btn-confirm").on("click", function () {
                id = $(this).attr("data-id");
                $(".btnnn").attr('href', function () {
                    return "/Home/SoruSil/" + id;
                })
                $("#mi-modal").modal('show');
            });

            $("#modal-btn-si").on("click", function () {
                callback(true);
                $("#mi-modal").modal('hide');
            });

            $("#modal-btn-no").on("click", function () {
                callback(false);
                $("#mi-modal").modal('hide');
                return e.preventDefault()
            });
        };

        modalConfirm(function (confirm) {

        });
    </script>
}

