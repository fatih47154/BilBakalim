@using BilBakalim.Data
@{
    ViewBag.Title = "KullaniciDetay";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@model Kullanici

@{    
    Kullanici aktifKullanici = (Kullanici)Session["Kullanici"];
}
}
<div class="col-lg-12">
    @if (TempData["hata"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["hata"]</p>
        </div>
    }

    @if (TempData["GenelMesaj"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["GenelMesaj"]</p>
        </div>
    }

</div>


<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">
                <a>
                    <img src="@Model.KullaniciResim.Url" alt="">
                </a>
                <h1>@Model.Adi</h1>
                <p>@Model.Email</p>
            </div>

            <ul class="nav nav-pills nav-stacked">
                @if (aktifKullanici.ID == Model.ID)
                {
                    <li><a href="/Kullanici/KullaniciGuncelle/@Model.ID"> <i class="icon-edit"></i>Profili Düzenle</a></li>
                }

            </ul>

        </section>
    </aside>
    <aside class="profile-info col-lg-9">
        <section class="panel">
            <form>
                <textarea placeholder="Whats in your mind today?" rows="2" class="form-control input-lg p-text-area"></textarea>
            </form>
            <footer class="panel-footer">
                <button class="btn btn-danger pull-right">Post</button>
                <ul class="nav nav-pills">
                    <li>
                        <a href="/Content/Admin/#"><i class="icon-map-marker"></i></a>
                    </li>
                    <li>
                        <a href="/Content/Admin/#"><i class="icon-camera"></i></a>
                    </li>
                    <li>
                        <a href="/Content/Admin/#"><i class=" icon-film"></i></a>
                    </li>
                    <li>
                        <a href="/Content/Admin/#"><i class="icon-microphone"></i></a>
                    </li>
                </ul>
            </footer>
        </section>
        <section class="panel">
            <div class="bio-graph-heading">
                @Model.Aciklama.
            </div>
            <div class="panel-body bio-graph-info">
                <h1>Kişisel Bilgiler</h1>
                <div class="row">
                    <div class="bio-row">
                        <p><span>Adı </span>: @Model.Adi</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Soyadı </span>: @Model.Soyadi</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Kullanıcı Adı </span>: @Model.KullaniciAdi</p>
                    </div>
                    <div class="bio-row">
                        <p><span>Mail</span>: @Model.Email</p>
                    </div>                   
                </div>
            </div>
        </section>
        <section>
            <div class="row">
                <div class="col-lg-6">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="bio-chart">
                                <input class="knob" data-width="100" data-height="100" data-displayPrevious=true data-thickness=".2" value="@Model.Sinif.Where(x=>x.KullaniciID==Model.ID).Count()" data-fgColor="#e06b7d" data-bgColor="#e8e8e8">
                            </div>
                            <div class="bio-desk">
                                <a href="/Kullanici/OyunListesi/@Model.ID"><h4 class="blue">Açtıgı Oyun Sayısı</h4></a>
                                <p>Ilk Oyun : @*@Model.Sinif.Where(x=>x.KullaniciID==Model.ID).OrderByDescending(x=>x.OlusturmaTarihi)*@</p>
                                <p>Son Oyun :</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="bio-chart">
                                <input class="knob" data-width="100" data-height="100" data-displayPrevious=true data-thickness=".2" value="@Model.Favori.Where(x=>x.KullaniciID==Model.ID).Count()" data-fgColor="#4CC5CD" data-bgColor="#e8e8e8">
                            </div>
                            <div class="bio-desk">
                                <a href="/Kullanici/FavoriListesi/@Model.ID"><h4 class="blue">Favori Sayısı</h4></a>
                                <p>Started : 15 July</p>
                                <p>Deadline : 15 August</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="bio-chart">
                                <input class="knob" data-width="100" data-height="100" data-displayPrevious=true data-thickness=".2" value="@Model.Takip.Where(x=>x.TakipEdenID==Model.ID).Count()" data-fgColor="#96be4b" data-bgColor="#e8e8e8">
                            </div>
                            <div class="bio-desk">
                                @*<h4 class="green">Takip Sayısı</h4>*@
                                <a href="/Kullanici/TakipListesi/@Model.ID"><h4 class="green"> Takip Sayısı</h4></a>
                                <p>Started : 15 July</p>
                                <p>Deadline : 15 August</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="panel">
                        <div class="panel-body">
                            <div class="bio-chart">
                                <input class="knob" data-width="100" data-height="100" data-displayPrevious=true data-thickness=".2" value="" data-fgColor="#cba4db" data-bgColor="#e8e8e8">
                            </div>
                            <div class="bio-desk">
                                <h4 class="purple">Eklenilen Soru Sayısı</h4>
                                <p>Started : 15 July</p>
                                <p>Deadline : 15 August</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </aside>
</div>

