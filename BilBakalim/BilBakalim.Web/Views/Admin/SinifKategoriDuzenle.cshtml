
@{
    ViewBag.Title = "SinifKategoriDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data
@model SinifKategori




<div class="col-lg-12">
    @if (TempData["Uyari"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["Uyari"]</p>
        </div>
    }
    @if (TempData["Hata"] != null)
    {
        <div class="alert alert-danger">
            <p>@TempData["Hata"]</p>
        </div>
    }

    @if (TempData["GenelMesaj"] != null)
    {
        <div class="alert alert-success">
            <p>@TempData["GenelMesaj"]</p>
        </div>
    }

</div>
    <div class="row">

        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="col-lg-12">
                        Şu anda <b> @Model.KategoriAdi</b> İsimli kategoriyi düzenliyorsunuz.
                    </div>
                </header>
                <div class="panel-body">
                    @using (Html.BeginForm("SinifKategoriDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-lg-12">
                                    @Html.Hidden("ID", Model.ID)

                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Kullanici Adı </label>&nbsp;<span style="color: red;">*</span>
                                        <input type="text" class="form-control" placeholder="Kategori Adı Giriniz..." name="KategoriAdi" required value="@Model.KategoriAdi">
                                    </div>


                                    <div class="col-md-12">
                                        <div class="entry-thumbnail"><img width="120" height="80" src="/Content/Resimler/SinifSoru/@Model.Resim.Url" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" srcset="@Model.Resim.Url 770w, @Model.Resim.Url 230w, @Model.Resim.Url 640w" sizes="(max-width: 120px) 100vw, 80px"></div>

                                    </div>


                                    <div class="form-group">
                                        <label>Resim</label>
                                    
                                            <input type="file"  class="form-control" name="resimGelen" value="@Model.Resim.Url">
                                    
                                    </div>

                                    <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                    <a href="/Admin/SinifKategori" class="btn btn-danger">İptal</a>
                                    <button type="reset" class="btn btn-default">Temizle</button>
                                </div>

                            </div>
                        </div>
                    }


                </div>
            </section>
        </div>
    </div>

    <script>document.resimGelen.submit();</script>


