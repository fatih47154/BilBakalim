@using BilBakalim.Data
@{
    ViewBag.Title = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@model Kullanici
<!DOCTYPE html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/Admin/img/favicon.png">

    <title>Profile Edit</title>

    <!-- Bootstrap core CSS -->
    @*<link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="/Content/Admin/js/html5shiv.js"></script>
      <script src="/Content/Admin/js/respond.min.js"></script>
    <![endif]-->
</head>



              <div class="row">
                  <aside class="profile-nav col-lg-3">
                      <section class="panel">
                          <div class="user-heading round">
                              <a >
                                  <img src="@Model.KullaniciResim.Url" alt="">
                              </a>
                              <h1>@Model.Adi @Model.Soyadi</h1>
                              <p>@Model.Email</p>
                          </div>

                          

                      </section>
                  </aside>
                  <aside class="profile-info col-lg-9">
                      <section class="panel">
                          <div class="bio-graph-heading">
                              @Model.Adi @Model.Soyadi Kullanıcısını Güncelliyorsunuz.
                          </div>
                          @using (Html.BeginForm("KUllaniciGuncelle", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
                          {

                              <div class="panel-body bio-graph-info">
                                  <h1> Profile Info</h1>

                                
                                  <form class="form-horizontal" role="form">
                                      <div class="form-group">
                                          <label class="col-lg-2 control-label">Açıklama</label>
                                          <div class="col-lg-10">
                                              <textarea name="Aciklama" id="" class="form-control" cols="30" rows="10"></textarea>
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-lg-2 control-label">Adı</label>
                                          <div class="col-lg-6">
                                              <input name="Adi" type="text" class="form-control" id="f-name" required value="@Model.Adi" placeholder=" ">
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-lg-2 control-label">Soyadi</label>
                                          <div class="col-lg-6">
                                              <input name="Soyadi" type="text" class="form-control" id="l-name" required value="@Model.Soyadi" placeholder=" ">
                                          </div>
                                      </div>
                                      <div class="form-group">
                                          <label class="col-lg-2 control-label">Kullanıcı Adı</label>
                                          <div class="col-lg-6">
                                              <input name="KullaniciAdi" type="text" class="form-control" id="c-name" required value="@Model.KullaniciAdi" placeholder=" ">
                                          </div>
                                      </div>                                      
                                      <div class="form-group">
                                          <div class="col-lg-offset-2 col-lg-10">
                                              <button type="submit" class="btn btn-success">Save</button>
                                              <a href="/Kullanici/KullaniciDetay/@Model.ID"> <button type="button" class="btn btn-default">Cancel</button></a>
                                          </div>
                                      </div>
                                  </form>
                              </div>
                          }
                          </section>
                      <section>
                          @using (Html.BeginForm("KullaniciSifreResimGuncelle", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
                          {
                              @Html.Hidden("ID", Model.ID)
                              <div class="panel panel-primary">
                                  <div class="panel-heading">Resim ve Şifre Değiştir</div>
                                  <div class="panel-body">
                                      <form class="form-horizontal" role="form">
                                          <div class="form-group">
                                              <label class="col-lg-2 control-label">ŞifreTekrar</label>
                                              <div class="col-lg-6">
                                                  <input name="SifreTekrar" type="password" class="form-control"  id="c-pwd" placeholder=" ">
                                              </div>
                                          </div>
                                          <div class="form-group">
                                              <label class="col-lg-2 control-label">Yeni Şifre</label>
                                              <div class="col-lg-6">
                                                  <input name="Sifre" type="password" class="form-control" id="n-pwd" placeholder=" ">
                                              </div>
                                          </div>

                                          <div class="form-group">
                                              <label class="col-lg-2 control-label">Resim Ekle</label>
                                              <div class="col-lg-6">
                                                  <input name="resimGelen" type="file" class="file-pos" id="exampleInputFile">
                                              </div>
                                          </div>

                                          <div class="form-group">
                                              <div class="col-lg-offset-2 col-lg-10">
                                                  <button type="submit" class="btn btn-info">Save</button>
                                                  <a href="/Kullanici/KullaniciDetay/@Model.ID"> <button type="button" class="btn btn-default">Cancel</button></a>
                                              </div>
                                          </div>
                                      </form>
                                  </div>
                              </div>
                          }
                      </section>
                  </aside>
              </div>

              <!-- page end-->
         
      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
          <div class="text-center">
              2013 &copy; FlatLab by VectorLab.
              <a href="/Content/Admin/#" class="go-top">
                  <i class="icon-angle-up"></i>
              </a>
          </div>
      </footer>
      <!--footer end-->
     

      <!-- js placed at the end of the document so the pages load faster -->
      <script src="/Content/Admin/js/jquery.js"></script>
      @*<script src="/Content/Admin/js/bootstrap.min.js"></script>*@
      <script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
      <script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
      <script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
      <script src="/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
      <script src="/Content/Admin/js/respond.min.js"></script>
      <!--common script for all pages-->
      <script src="/Content/Admin/js/common-scripts.js"></script>




