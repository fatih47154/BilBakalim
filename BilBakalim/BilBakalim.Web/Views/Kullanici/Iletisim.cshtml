@using BilBakalim.Data
@model Iletisim
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!DOCTYPE html>



<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/Admin/img/favicon.png">

    <title>Profile Edit</title>

    <!-- Bootstrap core CSS -->
    @*<link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">*@
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="/Content/Admin/js/html5shiv.js"></script>
      <script src="/Content/Admin/js/respond.min.js"></script>
    <![endif]-->
</head>

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["hata"]
    </div>
}
@if (TempData["basarı"] != null)
{
    <div class="alert alert-success">
        @TempData["basarı"]
    </div>
}


<div class="row">

    <aside class="profile-info col-lg-12 col-sm-6">
        <section class="panel">
            <div class="bio-graph-heading">
                Görüşleriniz Bizim İçin Önemlidir.
            </div>
            @using (Html.BeginForm("Iletisim", "Kullanici", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="panel-body bio-graph-info">
                    <h1> İletişim</h1>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Adınız</label>
                        <div class="col-lg-6">
                            <input name="Isim" type="text" class="form-control" id="f-name" required placeholder=" ">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Eposta</label>
                        <div class="col-lg-6">
                            <input name="Eposta" type="text" class="form-control" id="l-name" required placeholder=" ">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Telefon</label>
                        <div class="col-lg-6">
                            <input name="Telefon" type="number" class="form-control" id="c-name" required placeholder=" ">
                        </div>
                    </div>
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Açıklama</label>
                            <div class="col-lg-10">
                                <textarea name="Icerik" id="" class="form-control" cols="30" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-success">Gönder</button>
                                <button type="button" class="btn btn-default">İptal</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </section>

    </aside>
</div>

<!-- page end-->
<!--main content end-->
<!--footer start-->
<!--footer end-->
<!-- js placed at the end of the document so the pages load faster -->
<script src="/Content/Admin/js/jquery.js"></script>
@*<script src="/Content/Admin/js/bootstrap.min.js"></script>*@
<script class="include" type="text/javascript" src="/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
<script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
<script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
<script src="/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
<script src="/Content/Admin/js/respond.min.js"></script>
<!--common script for all pages-->
<script src="/Content/Admin/js/common-scripts.js"></script>




