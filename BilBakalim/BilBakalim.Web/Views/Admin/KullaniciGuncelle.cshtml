
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data
@model Kullanici

<div class="row">
    <div class="col-lg-12">
        @if (TempData["GenelMesaj"] != null)
        {
            <div class="alert alert-success">
                <p>@TempData["GenelMesaj"]</p>
            </div>
        }

        @if (TempData["hata"] != null)
        {
            <div class="alert alert-danger">
                <p>@TempData["hata"]</p>
            </div>
        }
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="col-lg-12">
                        Şu anda <b> @Model.Adi @Model.Soyadi</b> Kullanıcısını düzenliyorsunuz...
                    </div>
                </header>
                <div class="panel-body">
                    
                        @using (Html.BeginForm("KullaniciGuncelle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="col-lg-12">
                                        @Html.Hidden("ID", Model.ID)

                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Kullanici Adı </label>&nbsp;<span style="color: red;">*</span>
                                            <input type="text" class="form-control" placeholder="Adı Giriniz..." name="Adi" required value="@Model.Adi">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Kullanici Soyadi </label>&nbsp;<span style="color: red;">*</span>
                                            <input type="text" class="form-control" placeholder="Soyadı Giriniz..." name="Soyadi" required value="@Model.Soyadi">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Kullanici E-mail </label>&nbsp;<span style="color: red;">*</span>
                                            <input type="text" class="form-control" placeholder="Kullanıcı E-mail Giriniz..." name="Email" required value="@Model.Email">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Kullanıcı Adı </label>&nbsp;<span style="color: red;">*</span>
                                            <input type="text" class="form-control" placeholder="Kullanıcı Adı Giriniz..." name="KullaniciAdi" required value="@Model.KullaniciAdi">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Kullanici Şifre </label>&nbsp;<span style="color: red;">*</span>
                                            <input type="text" class="form-control" placeholder="Şifre Giriniz..." name="Sifre" required value="@Model.Sifre">
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Rol Seçiniz </label>&nbsp;<span style="color: red;">*</span>
                                            @Html.DropDownList("RolID", (SelectList)ViewBag.rol, "Seçiniz...", new { @class = "form-control", required = "required" })


                                        </div>

                                        <div class="col-md-12">
                                            <div class="entry-thumbnail"><img width="120" height="120" src="@Model.KullaniciResim.Url" class="attachment-post-thumbnail size-post-thumbnail wp-post-image" alt="" srcset="@Model.KullaniciResim.Url 770w, @Model.KullaniciResim.Url 230w, @Model.KullaniciResim.Url 640w" sizes="(max-width: 120px) 100vw, 80px"></div>

                                        </div>

                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Resim</label>
                                                <input type="file" name="resimGelen" class="form-control" placeholder="Resim giriniz.">
                                            </div>
                                        </div>

                                        <button type="submit" id="button" class="btn btn-info">Kaydet</button>
                                        <a href="/Admin/KullaniciListesi" class="btn btn-danger">İptal</a>
                                        <button type="reset" class="btn btn-default">Temizle</button>
                                    </div>

                                </div>
                            </div>

                        }
                </div>
            </section>
        </div>
    </div>
</div>
