
@{
    ViewBag.Title = "RolDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data
@model Rol

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Rol Düzenle</h3>
    </div>

    @using (Html.BeginForm("RolDuzenle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="card-body">

            @if (ViewData["hata"] != null)
            {
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                    @ViewData["hata"]
                </div>
            }


            @*  @Html.ValidationSummary()*@

            <div class="form-group">
                <div class="col-lg-2">

                    <input id="RolAdi" name="RolAdi" class="form-control round-input" type="text" value="@Model.RolAdi">
                </div>

            </div>
           

            <div class="form-group">
                <div class="col-lg-2">

                    <input id="Aciklama" name="Aciklama" class="form-control round-input" type="text" value="@Model.Aciklama">
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>

            </div>
        </div>
    }


   
</div>
