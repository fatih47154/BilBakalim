
@{
    ViewBag.Title = "RolListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using BilBakalim.Data

@model List<Rol>


@section head{
    <link rel="stylesheet" href="/Content/assets/data-tables/DT_bootstrap.css" />
    <style type="text/css">
        tbody, thead {
            width: 19.2%;
        }

        tbody, thead {
            font-size: 12px;
        }

        #back {
            background-color: #EECBC4;
        }
    </style>
}

@if (TempData["tehlikeli"] != null)
{
    <div class="alert alert-danger">
        @TempData["tehlikeli"]
    </div>
}
@if (TempData["uyari"] != null)
{
    <div class="alert alert-success">
        @TempData["uyari"]
    </div>
}

    <div class="row">
        <div class="col-lg-12">
            @if (TempData["GenelMesaj"] != null)
            {
                <div class="alert alert-success">
                    <p>@TempData["GenelMesaj"]</p>
                </div>
            }
            <section class="panel">
                <header class="panel-heading" style="padding-bottom: 10px;">
                    <div class="col-lg-12" style="margin-bottom:10px;">
                        <b>Kullanıcı Listesi</b>
                        <a href="/Admin/RolEkle" class="btn btn-success" style="float: right"><i class="icon-plus"></i> Yeni Rol Ekle</a>
                    </div>
                </header>

                <div class="panel-body">
                    <div class="col-lg-12">
                        <div class="adv-table editable-table">
                            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                                <thead>
                                    <tr>
                                        <th>Adı</th>
                                        <th>Acıklama</th>
                                        <th style="text-align:center;"> İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="@item.ID">
                                            <td class="col-lg-2">
                                                @item.RolAdi
                                            </td>
                                            <td class="col-lg-8">
                                                @item.Aciklama
                                            </td>

                                            <td class="col-lg-2">
                                                <a onclick="return confirm('Silmek istediğinizden emin misiniz ?')" title="Sil" style="float:right;" href="/Admin/RolSil/@item.ID" class="btn btn-danger btn-xs btn-confirm" data-id="@item.ID"><i class="icon-trash"></i> Sil</a>
                                                <a title="Düzenle" style="float:right;margin-right:5px;" href="/Admin/RolDuzenle/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i> Düzenle</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>