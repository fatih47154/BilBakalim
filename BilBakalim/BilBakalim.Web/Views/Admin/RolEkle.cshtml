
@{
    ViewBag.Title = "RolEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using BilBakalim.Data
@model Rol

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Rol Ekle</h3>
    </div>
      
            @using (Html.BeginForm("RolEkle", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="card-body">

                    @if (ViewData["Hata"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <h5><i class="icon fa fa-ban"></i> Dikkat!</h5>
                            @ViewData["Hata"]
                        </div>
                    }
                    @*  @Html.ValidationSummary()*@

                    <div class="form-group">
                        <div class="col-lg-2">

                            <input id="RolAdi" name="RolAdi" class="form-control round-input" type="text" placeholder="Rol adı giriniz..">
                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-lg-2">

                            <input id="Aciklama" name="Aciklama" class="form-control round-input" type="text" placeholder="Rol aciklamasi giriniz..">
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>

                    </div>
                </div>
            }


    </div>

