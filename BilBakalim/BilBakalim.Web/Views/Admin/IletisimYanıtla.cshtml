@using BilBakalim.Data
@{
    ViewBag.Title = "IletisimYanıtla";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Iletisim

@if (TempData["hata"] != null)
{
    <div class="alert alert-danger">
        @TempData["hata"]
    </div>
}
@if (TempData["basarı"] != null)
{
    <div class="alert alert-success">
        @TempData["basarı"]
    </div>
}

<div class="row">

    <aside class="profile-info col-lg-12 col-sm-6">
        <section class="panel">
            <header class="panel-heading">
                <div class="col-lg-12">
                    Şu anda <b> @Model.Isim @Model.Eposta</b> İletisini Cevaplıyorsunuz.
                </div>
            </header>
            @using (Html.BeginForm("IletisimYanıtla", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="panel-body bio-graph-info">
                    <h1> Yanıtla</h1>

                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Açıklama</label>
                            <div class="col-lg-10">
                                <textarea name="Icerik" id="" class="form-control" cols="30" rows="10"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-success">Gönder</button>
                                <button type="button" class="btn btn-default">İptal</button>
                            </div>
                        </div>
                    </form>
                </div>
            }
        </section>

    </aside>
</div>

